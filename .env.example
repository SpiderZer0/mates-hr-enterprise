# Environment
NODE_ENV=development

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/mates_hr?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# Backend
BACKEND_PORT=3001
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=7d
COOKIE_SECRET=your-cookie-secret-change-this-in-production

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_WS_URL=http://localhost:3001
NEXT_PUBLIC_APP_NAME="Mates HR"
NEXT_PUBLIC_DEFAULT_LANGUAGE=en

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@mates-hr.com

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Security
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# AWS S3 (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
AWS_BUCKET_NAME=

# OAuth (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# WebSocket
WS_PORT=3001
WS_CORS_ORIGIN=http://localhost:3000

# MinIO Object Storage
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=mates-hr

# RabbitMQ
RABBITMQ_URL=amqp://admin:admin123@localhost:5672
RABBITMQ_QUEUE_PREFIX=mates

# WebRTC / TURN Server
TURN_SERVER_URL=turn:localhost:3478
TURN_USERNAME=mates
TURN_PASSWORD=turn123
STUN_SERVER_URL=stun:stun.l.google.com:19302

# AI Analytics
AI_SERVICE_URL=http://localhost:8000
AI_API_KEY=your-ai-api-key
TELEMETRY_ENABLED=true
TELEMETRY_INTERVAL=60000

# Calendar Integration
GOOGLE_CALENDAR_API_KEY=
MICROSOFT_GRAPH_CLIENT_ID=
MICROSOFT_GRAPH_CLIENT_SECRET=
CALDAV_SERVER_URL=

# Notification Preferences
NOTIFICATION_DIGEST_ENABLED=true
NOTIFICATION_DIGEST_TIME=09:00
NOTIFICATION_RETENTION_DAYS=30

# Screen Share Settings
SCREENSHARE_MAX_DURATION=3600
SCREENSHARE_REQUIRE_CONSENT=true
SCREENSHARE_ALLOW_RECORDING=false

# Chat Settings
CHAT_MESSAGE_RETENTION_DAYS=90
CHAT_FILE_SIZE_LIMIT=52428800
CHAT_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx

# Project Settings
PROJECT_SCREENSHOT_ENABLED=false
PROJECT_SCREENSHOT_INTERVAL=600000
PROJECT_WORKLOG_MIN_DURATION=60

# Security Headers
CSP_DIRECTIVES="default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline';"
HSTS_MAX_AGE=31536000
X_FRAME_OPTIONS=DENY

# Monitoring
SENTRY_DSN=
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# Feature Flags
FEATURE_CHAT=true
FEATURE_SCREENSHARE=true
FEATURE_PROJECTS=true
FEATURE_AI_ANALYTICS=true
FEATURE_CALENDAR=true
FEATURE_MOBILE_APP=false
